{
  "ts-node": {
    "require": ["dotenv/config"],
    "esm": false
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
